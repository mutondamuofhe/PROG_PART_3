<Application x:Class="PROG_PART_3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROG_PART_3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Custom converters -->
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:InverseVisibilityConverter x:Key="InverseVisibilityConverter"/>
        <local:BooleanToCompletedButtonColorConverter x:Key="BooleanToCompletedButtonColorConverter"/>
        <local:ActionTypeToColorConverter x:Key="ActionTypeToColorConverter"/>
    </Application.Resources>
</Application>
